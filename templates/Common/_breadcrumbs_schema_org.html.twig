<script type="application/ld+json">
    {
        "@context": "https://schema.org/",
        "@type": "BreadcrumbList",
        "itemListElement": [
            {% for breadcrumb in breadcrumbs %}
                {
                    "@type": "ListItem",
                    "position": {{ loop.index }},
                    "item": {
                        "@id": "{{ breadcrumb.url }}",
                        "name": "{{ breadcrumb.name }}"
                    }
                }{% if not loop.last %},{% endif %}
            {% endfor %}
        ]
    }
</script>
