{% extends 'base.html.twig' %}

{% block title %}{{ title('app.thank_you.title'|trans) }}{% endblock %}

{% block main %}
    {% include 'Common/_webpage_schema_org.html.twig' with {'name': 'app.thank_you.title'|trans} %}
    {% include 'Common/_breadcrumbs_schema_org.html.twig' with {'breadcrumbs': [{'name': 'app.home.type'|trans, 'url': url('app_homepage')}, {'name': 'app.thank_you.title'|trans, 'url': url(app.request.attributes.get('_route'), app.request.attributes.get('_route_params'))}]} %}
    <div class="container !max-w-6xl py-14 -lg:py-12 -md:py-8">
        <h1 class="font-serif text-7xl text-color-3 !leading-tight mb-4 -md:text-5xl">{{ 'app.thank_you.title'|trans }}</h1>
        {% include 'Common/Icon/_emailSent.html.twig' with {'class': 'xt-icon h-auto'} only %}
        {{ 'app.thank_you.body'|trans({'{email}': email})|raw }}
    </div>
{% endblock %}
